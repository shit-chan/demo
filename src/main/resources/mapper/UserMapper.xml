<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- 指定工作空间，要与接口名相同，源代码没有去看，猜测应该是通过"这里的namespace.下边方法的id"来定位方法的 -->
<mapper namespace="com.shit.demo.mapper.UserMapper">

    <!-- insert user -->
    <insert id = "insert" parameterType="com.shit.demo.bean.User">
        INSERT INTO USER(NAME,AGE) VALUES(#{name},#{age});
    </insert>

    <!-- update user -->
    <update id="update" parameterType="com.shit.demo.bean.User">
        UPDATE USER SET NAME=#{name} , AGE = #{age} WHERE ID=#{id}
    </update>

    <!-- find user -->
    <select id="select" parameterType="int" resultMap="com.shit.demo.bean.User">
        SELECT ID,NAME,AGE FROM SHIT_USER WHERE ID=#{0}
    </select>


    <!-- delete user -->
    <delete id="delete" parameterType="int">
        DELETE FROM USER WHERE ID=#{0}
    </delete>
</mapper>